# .env.dev - Environment variables for Docker Compose local development
# This file is used by docker-compose.override.yml for the 'fastapi' service.

# --- CORE APPLICATION ---
SECRET_KEY=dev_secret_key_not_for_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
BACKEND_CORS_ORIGINS=http://localhost:3000

# --- DATABASE ---
# These values match the 'postgres' service in docker-compose.yml
DATABASE_URL=postgresql+psycopg2://api_user:dev_pass@postgres:5432/together
DOCUMENTS_BUCKET=together-uploads

# --- MINIO (Object Storage) ---
# These values match the 'minio' service in docker-compose.yml
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=False # Set to True for production with HTTPS

# --- ADMIN USER ---
FIRST_SUPERUSER_EMAIL=admin@example.com
FIRST_SUPERUSER_PASSWORD=password
FIRST_SUPERUSER_USERNAME=admin

# --- AI MODERATION ---
AI_MODERATION_DAILY_QUOTA=100
AI_MODERATION_TIMEOUT_SECONDS=10
AI_MODEL_VERSION=CamemBERT-MultiModel-v1.0

# --- OTHER DEVELOPMENT SETTINGS ---
ENVIRONMENT=development
LOG_LEVEL=debug # Set to 'info' or 'warning' for less verbose logs

